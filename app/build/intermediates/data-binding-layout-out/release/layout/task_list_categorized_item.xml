<?xml version="1.0" encoding="utf-8"?>

                                                   
    
                                          
                 
                       
                                                        
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp" android:tag="layout/task_list_categorized_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <FrameLayout
            android:id="@+id/selection"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskListItemTitle"
                tools:text="Task title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:tag="binding_1"     
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskListItemDescription"
                tools:text="Task description"
                android:tag="binding_2"           
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/divider"
            android:id="@+id/task_list_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
         